<article class="post">

    <header class="post-header">
        <h1 class="post-title">{{data.course.card.amp_title}}</h1>
    </header>
    <figure class="post-image">
        <amp-img src="{{data.course.meta.logo_url}}" width="600" height="400" layout="responsive"></amp-img>
    </figure>
    <section class="post-content">

        {{{data.course.card.rendered_content}}}

        <p style="text-align: center;">
            <a style="color: deeppink;" href="{{route.canonicalUrl}}">{{intlGet "messages.layouts.view_full_version"}}</a>
            <br />
            <small>{{intlGet "messages.marketing.hundred_pct_free"}}</small>
        </p>
    </section>

</article>
