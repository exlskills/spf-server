{{> digital-diploma-top}}

<style>
    .user-logos-container {
        text-align: center;
        padding: 0 10px;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .user-logos-container h3 {
        margin-top: 30px;
    }

    .user-logos-container img {
        width: 100%;
    }

    #user-logos-mobile {
        margin-top: 10px;
        margin-bottom: 10px;
    }

    @media (max-width:679px) {
        #user-logos-desktop {
            display: none;
        }
    }

    @media (min-width:680px) {
        #user-logos-mobile {
            display: none;
        }
    }

</style>

<!-- CONTENT -->
<div id="digital-diploma-index-wrapper" class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <!-- Title -->
                            <h4 class="col card-header-title">
                                {{#if data.digitalDiploma.is_project}}
                                    {{intlGet "messages.guided_projects.overview_label"}}
                                {{else}}
                                    {{intlGet "messages.digital_diplomas.overview_label"}}
                                {{/if}}
                            </h4>
                        </div>
                        <div class="col-auto">
                            <a href="#dd-plans" class="btn btn-sm btn-primary"><span class="fe fe-user-check mr-1"></span>{{intlGet "messages.marketing.enroll_today"}}</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {{{markdown data.digitalDiploma.description}}}
                </div>
            </div>

            <div id="dd-plans">
                {{#each data.digitalDiploma.plans}}
                    <div class="card">
                        <div class="card-header">
                            <!-- Title -->
                            <h4 class="card-header-title">
                                {{title}}
                            </h4>
                        </div>
                        <div class="card-body">
                            {{{markdown headline}}}
                            <a href="#!modalCheckout={{{encodeURI checkoutItemJSON}}}" class="btn btn-primary">{{intlGet "messages.marketing.enroll_now"}} ({{intlGet "messages.marketing.intro_offer"}}: ${{cost}})</a>
                            <br>
                            <small>{{intlGet "messages.misc.note_caps"}} {{intlGet "messages.marketing.sales_end_label"}} December 1st, {{intlGet "messages.marketing.limited_spots_remain"}}</small>
                        </div>
                    </div>
                {{else}}
                    <div class="card">
                        <div class="card-header">
                            <!-- Title -->
                            <h4 class="card-header-title">
                                {{intlGet "messages.misc.oops"}}
                            </h4>
                        </div>
                        <div class="card-body">
                            {{intlGet "messages.digital_diplomas.no_plans"}} {{intlGet "messages.digital_diplomas.pls_check_back_soon"}}
                        </div>
                    </div>
                {{/each}}
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <!-- Title -->
                            <h4 class="card-header-title">
                                {{intlGet "messages.instructors.label"}}
                            </h4>
                        </div>
                        <div class="col-auto">

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {{{markdown data.digitalDiploma.info_md}}}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <!-- Title -->
                            <h4 class="card-header-title">
                                {{intlGet "messages.help.have_qs"}}
                            </h4>
                        </div>
                        <div class="col-auto">

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {{intlGet "messages.help.reach_via"}} <a id="dd-live-chat-help" href="#!">{{intlGet "messages.help.live_chat_here"}}</a>
                    <script>
                        $(function() {
                          $('#dd-live-chat-help').click(function() {
                            Intercom('show');
                          });
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
</div>