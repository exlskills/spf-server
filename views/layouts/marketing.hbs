}

#marketing-index-splash .btn-wrapper {
  width: 10vw;
}

#marketing-index-splash .btn-try-it {
  background-color: #00BDE6;
  border-color: #00BDE6;"
}

#marketing-index-splash .no-login {
  margin-top: 1em;
  color: lightgrey;
  width: 150px;
}

@media (max-width: 768px) {
