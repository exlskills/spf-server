                    <!-- Divider -->
                    <hr>

                    <div class="row align-items-center">
                        <div class="col">

                            <!-- Title -->
                            <h5 class="mb-0">
                                {{intlGet "messages.languages.label"}}
                            </h5>

                        </div>
                        <div class="col-auto">

                            <small class="text-muted">
