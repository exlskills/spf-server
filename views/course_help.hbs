    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-header">
                    <!-- Title -->
                    <h4 class="card-header-title">
                        {{intlGet "messages.help.faq_label"}}
                    </h4>
                </div>
                <div class="card-body">
                    {{{markdown data.helpFaqMD}}}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <!-- Title -->
                            <h4 class="card-header-title">
                                {{intlGet "messages.help.have_qs"}}
                            </h4>
                        </div>
                        <div class="col-auto">

                        </div>
