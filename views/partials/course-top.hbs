<style>
    #course-top {
        margin-bottom: 0;
    }
    #course-top .hero-wrapper {
        height: 200px;
        width: 100%;
    }
    #course-top .hero {
        height: 100%;
        width: 100%;
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url({{data.course.meta.logo_url}}) no-repeat;
        background-size: cover;
        background-position-y: 25%;
    }
    #course-top .header-avatar-top img {
        background-color: white;
    }
    #course-top .header-body {
        border: none;
    }
    #course-top .cc-alert-banner {
        margin: 0;
    }
    @media (max-width: 768px) {
        #course-top .hero-wrapper {
            margin-bottom: 30px;
        }
    }
</style>
<div id="course-top" class="header">

    {{>course-card-banner}}

    <div class="hero-wrapper">
        <div class="hero">

        </div>
    </div>

    <div class="container-fluid">

        <!-- Body -->
        <div class="header-body mt--5 mt-md--6">
            <div class="row align-items-end">
                <div class="col-auto">

                    <!-- Avatar -->
                    <div class="avatar avatar-xxl header-avatar-top">
                        <img src="{{data.course.meta.badge_url}}" alt="..." class="avatar-img rounded-circle border border-4 border-body">
                    </div>

                </div>
                <div class="col mb-3 ml--3 ml-md--2">

                    <!-- Pretitle -->
                    <h6 class="header-pretitle">
                        {{#eq contentTmpl "course_index"}}
                            {{data.course.meta.primary_topic}}
                        {{else}}
                            {{#eq contentTmpl "course_index"}}
                                {{data.course.meta.primary_topic}}
                            {{else}}
                                {{data.course.meta.title}}
                            {{/eq}}
                        {{/eq}}
                    </h6>

                    <!-- Title -->
                    <h1 class="header-title">
                        {{#eq contentTmpl "course_index"}}
                            {{data.course.meta.title}}
                        {{/eq}}
                        {{#eq contentTmpl "course_certificate"}}
                            {{intlGet "messages.certificate.verified_cert"}}
                        {{/eq}}
                        {{#eq contentTmpl "course_progress"}}
                            {{intlGet "messages.course.progress_label"}}
                        {{/eq}}
                        {{#eq contentTmpl "course_live"}}
                            {{intlGet "messages.class.live_class_label"}}
                        {{/eq}}
                        {{#eq contentTmpl "course_help"}}
                            {{intlGet "messages.help.get_help_label"}}
                        {{/eq}}
                        {{#eq contentTmpl "course_content"}}
                            {{data.course.meta.title}}
                        {{/eq}}
                    </h1>

                </div>
                <div class="col-12 col-md-auto mt-2 mt-md-0 mb-md-3">

                    <!-- TODO Enroll toggle -->

                </div>
            </div> <!-- / .row -->
        </div> <!-- / .header-body -->

    </div>
</div>