<style>
    .cc-alert-banner {
        border: none;
        border-radius: 0;
    }

    @media (min-width:768px) {
        .cc-alert-banner {
            padding-left: 36px;
        }
    }
</style>
{{#if user.is_demo}}
    <div class="alert alert-warning cc-alert-banner" role="alert">
        {{intlGet "messages.course.dont_lose_progress"}} <a href="{{config.authAPIBaseURL}}/auth/keycloak?redirect={{encodeURI route.url}}">{{intlGet "messages.marketing.sign_up_label_lc_up"}}</a> {{intlGet "messages.marketing.for_free_or"}} <a href="{{config.authAPIBaseURL}}/auth/keycloak?redirect={{encodeURI route.url}}">{{intlGet "messages.misc.login_label"}}</a> {{intlGet "messages.course.to_keep_track"}} 📈 🎓
    </div>
{{else}}
    <div class="alert alert-success cc-alert-banner" role="alert">
        {{intlGet "messages.marketing.ready_to_take_line"}} <a class="spf-link" href="/learn-{{route.locale}}/projects">{{intlGet "messages.guided_projects.label"}}</a> {{intlGet "messages.marketing.with_mentor"}} 👩‍💻 💼
    </div>
{{/if}}
