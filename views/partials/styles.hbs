<link rel="" href="{{config.static_assets_url_prefix}}/css/theme.min.css" data-toggle="theme" data-theme-mode="light">

<style>
    body { display: none; }
</style>

<script>
    var themeMode = (localStorage.getItem('themeMode')) ? localStorage.getItem('themeMode') : 'light';
    var themeFile = document.querySelector('[data-toggle="theme"][data-theme-mode="' + themeMode + '"]');

    // Enable stylesheet
    themeFile.rel = 'stylesheet';

    // Enable body content
    themeFile.addEventListener('load', function() {
        document.body.style.display = 'block';
    });
</script>

