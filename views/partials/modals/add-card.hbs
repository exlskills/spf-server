<style>
    @media (max-width: 768px) {
        #modalAddCard .btn-sm-w-100 {
            width: 100%;
        }
    }
</style>

<!-- Modal: Billing -->
<div class="modal fade" id="modalAddCard" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-card card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">

                            <!-- Title -->
                            <h4 class="card-header-title">
                                Add a Payment Method ðŸ’°
                            </h4>

                        </div>
                        <div class="col-auto">

                            <!-- Close -->
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>

                        </div>
                    </div> <!-- / .row -->
                </div>

                <div class="card-body">
                    {{#if user.is_demo}}
                        <div class="card bg-light border">
                            <div class="card-body text-center">
                                <strong>
                                    <a href="{{config.authAPIBaseURL}}/auth/keycloak?redirect={{encodeURI route.url}}{{encodeURI '#!modalAddCard=true'}}">Sign Up or Login to add a Payment Method</a>
                                </strong>
                            </div>
                        </div>
                    {{else}}
                        {{#gt user.sub_level 1000}}
                            <div class="text-center">
                                <div class="col">
                                    <h2 style="margin-bottom: 10px;">âœ… Payment Method Added</h2>
                                </div>
                                <br />
                                <div class="col">
                                    <img src="/learn-en/assets/img/illustrations/happiness.svg" alt="..." class="img-fluid mb-4" style="max-width: 180px;">
                                </div>
                                <div class="text-secondary">
                                    Click <a class="drift-open-chat" href="#" data-dismiss="modal" aria-label="Close">here</a> to continue ðŸš€
                                </div>
                            </div>
                        {{else}}
                            <form id="add-modal-add-card-form">
                                <div class="">
                                    <label for="add-modal-card-element">
                                        <span data-toggle="tooltip" data-placement="top" title=""
                                              data-original-title="Your card will be charged only for purchases you make on EXLskills. You can remove it at any time.">Credit or Debit Card <span
                                                class="fe fe-help-circle mr-4"></span></span>
                                    </label>
                                    <div id="add-modal-card-element">
                                        <!-- A Stripe Element will be inserted here. -->
                                    </div>

                                    <!-- Used to display form errors. -->
                                    <div id="add-modal-card-errors" role="alert" class="text-danger"></div>
                                    <div style="width: 100%; height: 6px;"></div>
                                    <small class="text-secondary">You won't be charged until you make a purchase</small>
                                </div>

                                <button type="submit"
                                        class="btn btn-primary float-right mt-4 btn-sm-w-100 form-btn-submit">Add Card
                                </button>
                            </form>
                        {{/gt}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

{{#lt user.sub_level 1000}}
    <script>
        $(function () {

            // Create a Stripe client.
            var stripe = Stripe('{{config.stripePubKey}}');

            // Create an instance of Elements.
            var elements = stripe.elements();

            // Custom styling can be passed to options when creating an Element.
            // (Note that this demo uses a wider set of styles than the guide below.)
            var style = {
                base: {
                    color: '#32325d',
                    lineHeight: '18px',
                    fontFamily: '"Helvetica Neue", Helvetica, sans-serif',
                    fontSmoothing: 'antialiased',
                    fontSize: '16px',
                    '::placeholder': {
                        color: '#aab7c4'
                    }
                },
                invalid: {
                    color: '#fa755a',
                    iconColor: '#fa755a'
                }
            };

            // Create an instance of the card Element.
            var card = elements.create('card', {style: style});

            // Add an instance of the card Element into the `add-modal-card-element` <div>.
            card.mount('#add-modal-card-element');

            // Handle real-time validation errors from the card Element.
            card.addEventListener('change', function (event) {
                var displayError = document.getElementById('add-modal-card-errors');
                if (event.error) {
                    displayError.textContent = event.error.message;
                } else {
                    displayError.textContent = '';
                }
            });

            function stripeTokenHandler(tkn) {
                $.postJSON('{{config.authAPIBaseURL}}/me/credits/enroll', {
                    stripeToken: {token: tkn}
                }, function (data) {
                    refreshJWT(function () {
                        window.location.reload();
                    });
                });
            }

            // Handle form submission.
            $('#add-modal-add-card-form').submit(function (event) {
                event.preventDefault();
                $(".form-btn-submit", this).addClass('is-loading');
                $(".form-btn-submit", this).attr('disabled', 'disabled');
                var form = this;
                stripe.createToken(card).then(function (result) {
                    if (result.error) {
                        $(".form-btn-submit", form).removeClass('is-loading');
                        $(".form-btn-submit", form).attr('disabled', false);
                        // Inform the user if there was an error.
                        var errorElement = document.getElementById('add-modal-card-errors');
                        errorElement.textContent = result.error.message;
                    } else {
                        // Send the token to your server.
                        stripeTokenHandler(result.token);
                    }
                }, function (reject) {
                    $(".form-btn-submit", form).removeClass('is-loading');
                    $(".form-btn-submit", form).attr('disabled', false);
                });
            });
        });
    </script>
{{/lt}}
