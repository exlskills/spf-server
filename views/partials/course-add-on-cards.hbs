{{#if data.course.meta.has_live_mode}}
    <div class="card">
        <div class="card-body text-center">
            <div class="row justify-content-center">
                <div class="col-12 ">

                    <!-- Image -->
                    <img src="/learn-en/assets/img/illustrations/coworking.svg" alt="..." class="img-fluid mb-4">

                    <!-- Title -->
                    <h2>
                        Join a Live Class!
                    </h2>

                    <!-- Content -->
                    <p class="text-muted">
                        EXLskills' live classes, led by verified professional instructors, help you learn faster and better than ever before!
                    </p>

                    <!-- Button -->
                    <a href="/learn-{{route.locale}}/courses/{{data.course.meta.url_id}}/live" class="spf-link btn btn-danger">
                        Register
                    </a>

                </div>
            </div> <!-- / .row -->
        </div>
    </div>
{{/if}}

