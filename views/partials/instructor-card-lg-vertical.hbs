<div class="col-12 col-sm-6 col-lg-4 col-xl-3">

    <!-- Card -->
    <div class="card" style="height: calc(100% - 20px);">

        <a class="spf-link" href="/learn-{{locale}}/instructors/{{instructor.url_id}}">
            <div style="height: 180px;background: url(/learn-en/assets/img/covers/profile-cover-6.jpg);background-size: cover;background-position-x: center;"></div>
        </a>

        <div class="card-body text-center d-flex flex-column justify-content-between">
            <a href="/learn-{{locale}}/instructors/{{instructor.url_id}}" class="spf-link avatar avatar-xl card-avatar card-avatar-top">
                <img src="{{instructor.avatar_url}}" class="avatar-img rounded-circle border border-4 border-card" alt="...">
            </a>

            <h2 class="card-title text-center">
                <a class="spf-link" href="/learn-{{locale}}/instructors/{{instructor.url_id}}">{{instructor.full_name}}</a>
            </h2>

            <p class="card-text text-center text-muted">
                <small>
                    {{instructor.headline}}
                </small>
            </p>

            <p class="card-text">
                {{#each instructor.instructor_topics_locale}}
                    <span class="badge badge-primary">
                        {{this}}
                    </span>
                {{/each}}
            </p>

            <hr>

            <div class="row">
                <div class="col-auto">
                    <small>
                        <span class="text-success fe fe-check-circle"></span> <span class="text-secondary">{{intlGet "messages.certificate.verified_label_caps"}}</span>
                    </small>
                </div>
                <div class="col-auto">
                    <a href="/learn-{{locale}}/instructors/{{instructor.url_id}}" class="spf-link btn btn-sm btn-danger">
                        <span class="fe fe-clock"></span> {{intlGet "messages.marketing.book_now_e"}}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
