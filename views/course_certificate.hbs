<!-- CONTENT -->
<div id="course-certificate-content" class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-8">
            <a class="btn btn-primary w-100 mb-4 d-xl-none d-lg-none d-md-none" href="#!modalCheckout={{{encodeURI data.checkoutItemJSON}}}">
                Purchase Certificate
            </a>
            <div class="card">
                <div class="card-header">
                    <!-- Title -->
                    <h4 class="card-header-title">
                        Get Certified, Get Employed
                    </h4>
                </div>
                <div class="card-body">
                    {{{markdown data.certInfoMD}}}
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4">
            <a class="btn btn-primary w-100 mb-4" href="#!modalCheckout={{{encodeURI data.checkoutItemJSON}}}">
                Purchase Certificate
            </a>
            <div class="card">
                <div class="card-body">

                    <div class="row align-items-center">
                        <div class="col">

                            <!-- Title -->
                            <h5 class="mb-0">
                                Price
                            </h5>

                        </div>
                        <div class="col-auto">

                            <small class="text-muted">
                                ${{data.course.meta.verified_cert_cost}}
                            </small>

                        </div>
                    </div> <!-- / .row -->

                    <!-- Divider -->
                    <hr>

                    <div class="row align-items-center">
                        <div class="col">

                            <!-- Title -->
                            <h5 class="mb-0">
                                Level
                            </h5>

                        </div>
                        <div class="col-auto">

                            <small class="text-muted">
                                {{data.course.meta.skill_level_text}}
                            </small>

                        </div>
                    </div> <!-- / .row -->

                    <!-- Divider -->
                    <hr>

                    <div class="row align-items-center">
                        <div class="col">

                            <!-- Title -->
                            <h5 class="mb-0">
                                ID Verification
                            </h5>

                        </div>
                        <div class="col-auto">

                            <small class="text-muted">
                                Mandatory
                            </small>

                        </div>
                    </div> <!-- / .row -->

                    <!-- Divider -->
                    <hr>

                    <div class="row align-items-center">
                        <div class="col">

                            <!-- Title -->
                            <h5 class="mb-0">
                                Exam
                            </h5>

                        </div>
                        <div class="col-auto">

                            <small class="text-muted">
                                Proctored Online (45-90 Minutes)
                            </small>

                        </div>
                    </div> <!-- / .row -->

                    <!-- Divider -->
                    <hr>

                    <div class="row align-items-center">
                        <div class="col">

                            <!-- Title -->
                            <h5 class="mb-0">
                                Interview
                            </h5>

                        </div>
                        <div class="col-auto">

                            <small class="text-muted">
                                Online Call (~30 Minutes)
                            </small>

                        </div>
                    </div> <!-- / .row -->

                    <!-- Divider -->
                    <hr>

                    <div class="row align-items-center">
                        <div class="col">

                            <!-- Title -->
                            <h5 class="mb-0">
                                Languages
                            </h5>

                        </div>
                        <div class="col-auto">

                            <small class="text-muted">
                                English
                            </small>

                        </div>
                    </div> <!-- / .row -->
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-header">
                    <!-- Title -->
                    <h4 class="card-header-title">
                        Frequently Asked Questions
                    </h4>
                </div>
                <div class="card-body">
                    {{{markdown data.certFaqMD}}}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <!-- Title -->
                            <h4 class="card-header-title">
                                Have questions?
                            </h4>
                        </div>
                        <div class="col-auto">

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    Feel free to reach out to us via <a class="drift-open-chat" href="#!">live chat here!</a>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">

        </div>
    </div>
    <br />
    <br />
    <br />
</div>
